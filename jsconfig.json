{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    ".history"
  ],
  "include": [
    "./src/**/*",
    "./bin/**/*",
    "./lib/**/*",
    "./utils/**/*",
    "./config/**/*"
  ],
  "typingOptions": {
    "enableAutoDiscovery": true
  }
}